<div class="container p-4">
  <div class="row">
    <div class="col-md-4 mx-auto">
      <div class="card text-center">
        <div class="card-header">
          <h3>SignUp</h3>
        </div>
        <div class="card-body">
          <form action="/signup" method="POST">
            <div class="form-group">
              <input type="text" name="username" placeholder="Nombre" class="form-control"autofocus required minlength="2" maxlength="15"  oninvalid="setCustomValidity('El nombre es obligatorio')"  oninput="setCustomValidity('')">
            </div>
            <div class="form-group">
              <input type="text" name="ape1" placeholder="Apellido1" class="form-control"  required minlength="2" maxlength="15"  oninvalid="setCustomValidity('El apellido1 es obligatorio')" oninput="setCustomValidity('')">
            </div>
            <div class="form-group">
              <input type="text" name="ape2" placeholder="Apellido2" class="form-control" required minlength="2" maxlength="15"   oninvalid="setCustomValidity('El apellido2 es obligatorio')"  oninput="setCustomValidity('')">
            </div>
            <div class="form-group">
              <input type="email" name="email" placeholder="email" class="form-control" required minlength="10" maxlength="25"  oninvalid="setCustomValidity('Escriba un formato de email correcto')" oninput="setCustomValidity('')" >
            </div>
            <div class="form-group">
              <input type="password" name="password" placeholder="Contraseña" class="form-control" required 
              pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[@$!%*?&])[A-Za-z\d@$!%*?&]{8,}$"  maxlength="16"  oninvalid="setCustomValidity('La contraseña debe tener almenos una Mayus,Minus y un carácter')" oninput="setCustomValidity('')">
            </div>
            <div class="form-group">
              <button class="btn btn-success btn-block">
                Registrarse
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

